                   Aoc2021.Day25

  other-modules: Aoc2021.AocUtils

  hs-source-dirs:   src

  ghc-options: -O2

  default-extensions:    OverloadedStrings
                       , TemplateHaskell
                       , GADTs
                       , TypeFamilies
                       , ImportQualifiedPost
                       , LambdaCase

  build-depends:         base >= 4.13
                       , attoparsec
                       , text
                       , mtl
                       , containers
                       , hashmap
                       , lens
                       , vector
                       , algebraic-graphs
                       , memoize
                       , transformers
                       , heap

  default-language:    GHC2021

executable Aoc2021
  default-language: Haskell2010
  hs-source-dirs: app
  main-is: Main.hs
  build-depends:         base >= 4.13
                       , aoc2021
                       , criterion

  default-extensions:  ImportQualifiedPost
  ghc-options: -O2
