library
  exposed-modules: Aoc2021.Day01,
                   Aoc2021.Day02,
                   Aoc2021.Day03,
                   Aoc2021.Day04,
                   Aoc2021.Day05,
                   Aoc2021.Day06,
                   Aoc2021.Day07,
